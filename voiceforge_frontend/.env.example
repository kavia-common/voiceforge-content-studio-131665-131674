# VoiceForge Frontend Environment Variables

# Site URL for email redirects and OAuth callbacks
REACT_APP_SITE_URL=http://localhost:3000

# API Base URL (will be configured when backend is available)
REACT_APP_API_BASE_URL=http://localhost:8000/api

# Stripe Configuration (for payment processing)
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Feature Flags
REACT_APP_ENABLE_VOICE_CLONING=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_BACKGROUND_MUSIC=true

# Audio Configuration
REACT_APP_MAX_AUDIO_DURATION=600
REACT_APP_SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a
